{
  "extends": "../../tsconfig.shared.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
